<?php

$rules = [
    '@Symfony'               => true,
    'binary_operator_spaces' => [
        'operators' => [
            '=>' => 'align',
        ],
    ],
    'ordered_imports'        => true,
];

$finder = PhpCsFixer\Finder::create()
    ->in(['src', 'tests']);

return PhpCsFixer\Config::create()
    ->setFinder($finder)
    ->setRules($rules)
    ->setRiskyAllowed(false)
    ->setUsingCache(true);
